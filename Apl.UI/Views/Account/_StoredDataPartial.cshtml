@using Apl.Entities.Domain
@using Apl.UI.Artifacts
@using Apl.UI.Helpers

@model Apl.UI.Models.StoredDataModel
           
@{

//    var interViewOptions = (ViewOptions)ViewBag.ViewOptions;

}


@Html.Partial("~/Views/Shared/GeneralPartial/_ModalLoadingPartial.cshtml")


@Html.Partial("~/Views/Shared/GeneralPartial/_InfoPartial.cshtml")

<section  class="myjsevent-pform">
    @using (Html.BeginForm("StoredData", "Account")) {
        @Html.AntiForgeryToken()
        <div class="panel panel-info">
            <div class="panel-heading">
                @ViewBag.Title, @(ReflectionExtensions.MyGetPropertyDisplayName<user>(i => i.Id))
            </div>
            <div class="panel-body">
                @Html.Raw(Html.CustomValidationSummary())
                <div class="row">
                    <div class="col-md-3 form-group">
                        <div class="editor-label">
                            @Html.LabelFor(m => m.Name)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.Name, new { @class = "text-box single-line form-control" })
                        </div>
                    </div>
                    <div class="col-md-3 form-group">
                        <div class="editor-label">
                            @Html.LabelFor(m => m.LastName)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "text-box single-line form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-11">
                        <table class="table table-condensed table-bordered">
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="row">
                                            <div class="col-md-3 form-group">
                                                <div class="editor-label">
                                                    @Html.LabelFor(m => m.Phone)
                                                </div>
                                                <div class="editor-field">
                                                    @Html.TextBoxFor(m => m.Phone, new { @class = "text-box single-line form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="form-actions no-color">
                    <input class="btn btn-primary btn-lg" type="submit" value='@ViewBag.Title' />
                </div>
            </div>
        </div>
    }
</section>


<script>
    $(document).ready(function () {

        $("#Continentes").addClass("form-control");
        $("#Continentes").change(MyChangeContinentes);
        $("#IdPais").change(MyChangePaises);

    })
</script>
