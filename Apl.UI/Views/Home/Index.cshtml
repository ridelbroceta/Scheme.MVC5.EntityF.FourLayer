@using Apl.UI.Helpers
@using Apl.UI.Models
@model LoginModel

@{
    ViewBag.Title = "Login";

    if (ViewBag.ViewOptions == null)
    {
        ViewBag.ViewOptions = new ViewOptions
        {
            IsFixed = true,
            IsPrincipal = false,
            IsSencondaryWhite = true,
        };
    }
    
    
}

@Html.Partial("~/Views/Shared/GeneralPartial/_ModalLoadingPartial.cshtml")


<section  class="myjsevent-pform">
    @using (Html.BeginForm("Index", "Home", new { ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm" }))
    {
        @Html.AntiForgeryToken()
        
        <fieldset>
            <legend style="display: none;"></legend>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    @Html.Raw(Html.CustomValidationSummary())
                    <div class="signin-card">
                        <table>
                            <tbody>
                                <tr>
                                    <td>
                                        <img class="img-rounded myimage-3x" src='@Url.Content("~/Images/user.png")' alt="" /> 
                                    </td>
                                    <td>
                                        <h3>@ViewBag.Title.</h3>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "text-box single-line form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "text-box single-line form-control" })
                        </div>
                        <div class="form-actions no-color">
                            <input class="btn btn-primary btn-lg" type="submit" value="Ingresar" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
        </fieldset>
    
    }
</section>

@section Scripts {
    
}
